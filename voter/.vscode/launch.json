{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Mocha All",
        "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
        "args": [
            "--compilers",
            "js:babel-core/register",
            "--require", 
            "./test/test_helper.js",  
            "--recursive"  
